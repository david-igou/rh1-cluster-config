{
  "name": "Cluster Config Development",
  "image": "quay.io/devfile/universal-developer-image:latest",
  
  "features": {
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "yaml.schemas": {
          "kubernetes": [
            "namespaces/*.yaml",
            "aap-instances/*.yaml",
            "rbac/*.yaml",
            "operators/*.yaml"
          ],
          "https://raw.githubusercontent.com/tektoncd/pipeline/main/docs/api-spec.json": [
            "tekton/pipelines/*.yaml",
            "tekton/tasks/*.yaml",
            "tekton/triggers/*.yaml"
          ],
          "https://raw.githubusercontent.com/argoproj/argo-cd/master/manifests/crds/application-crd.yaml": [
            "argocd/applications/*.yaml",
            "argocd/root-app.yaml"
          ]
        },
        "yaml.format.enable": true,
        "yaml.validate": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "editor.formatOnSave": true,
        "editor.rulers": [120],
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml",
          "editor.tabSize": 2
        }
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.kube,target=/home/vscode/.kube,type=bind,consistency=cached"
  ],

  "runArgs": [
    "--network=host"
  ],

  "forwardPorts": [],

  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
}

